<h1><%= @project.title %></h1>

<% if is_professor? %>
	<h3><%= @project.remaining_time %> hours remaining</h3>
	<% if @project.remaining_time < 0 %>
	<div id="errors">
		<h4>over budget</h4>
	</div>
	<% end %>
<% elsif is_student? %>
	<h3><%= @student_total_hours %> hours worked on this project</h3>
<% end %>

<h3><%= @project.hypothesis %></h3>

<p><%= @project.summary %></p>
<p>Status: <%= @project.status %></p>

<%= render(partial: '/shared/error_messages', locals: { obj: @record }) %>
<div id="list-of-records">
	<% @project.records.each do |record| %>
		<div class="record-info">
			<p><%= record.student.name%></p>
			<p><%= record.observations %></p>
			<% if is_professor? %>
				<p><%= record.hours_worked%> hours worked</p><br>
			<% end %> 
		</div>
	<% end %>
</div>

<% if is_student? %>
	<%= form_for @record , html: {class: "form-group"}, remote: true do |f| %>
	  <%= f.hidden_field :project_id, value: @project.id %>
	  <%= f.label :hours_worked %>
	  <%= f.number_field :hours_worked %><br>
	  <%= f.label :observations %>
	  <%= f.text_area :observations, cols: 30, rows: 15%><br>
	  <%= f.submit %>
	<% end %>
<% end %>